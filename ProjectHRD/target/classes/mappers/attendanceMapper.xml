<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.bswill.mapper.AttendanceMapper">

	<!-- 출퇴근 목록 조회 검색 + 페이징 -->
	<select id="attendanceList" resultType="AttendanceVO">
		<![CDATA[
			SELECT 
			    A.att_no,
			    A.att_date,
			    A.employee_id,
			    E.emp_name,
			    J.job,
			    D.deptnm,
			    A.work_type,
			    A.start_time,
			    A.finish_time,
			    A.break_time
			FROM 
			    tbl_attendance A
			    INNER JOIN tbl_employee E ON A.employee_id = E.employee_id
			    INNER JOIN tbl_department D ON E.deptid = D.deptid
			    INNER JOIN tbl_job J ON E.job_id = J.job_id > 0	
		]]>
			<include refid="period" />
			<include refid="date" />
			<include refid="departments" />
		<![CDATA[
			ORDER BY att_no DESC, start_time DESC 
			
		]]>
		<!-- limit #{startPage},#{pageSize} --><!-- 페이징 수정해야함 -->
	</select>

	<!-- 검색 조건 -->
	<!-- 기간 -->
	<sql id="period">
		<if test="startDate != null and endDate != null">
			AND
			att_date BETWEEN #{startDate}
			AND
			#{endDate}
		</if>
	</sql>
	<!-- 일 -->
	<sql id="date">
		<if test="searchDate != null">
			AND
			att_date LIKE #{searchDate}
		</if>
	</sql>
	<!-- 부서 -->
	<sql id="departments">
		<if test="keyword != null">
			AND
			department LIKE concat('%',#{keyword}, '%')
		</if>
	</sql>


</mapper>