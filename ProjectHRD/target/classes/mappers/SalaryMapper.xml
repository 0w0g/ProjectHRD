       select * from tbl_salary
       order by employee_id asc
    </select>
    
    <!-- 급여년월에 따른 급여 조회 -->
    <select id="selectSalarySeach" resultType="com.bswill.domain.SalaryListVO">
       select * from tbl_salarylist
       where pay_yearmonth = #{keyword}
       order by employee_id asc
    </select>
    
